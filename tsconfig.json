{
  "compilerOptions": {
    "outDir": "./build/client",
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "exclude": ["**/*.spec.ts", "**/node_modules/**"]
}
